<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/crime_string_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_strong_title"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/crime_strong_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_strong_date"/>

    <Button
        android:id="@+id/crime_strong_police"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/crime_strong_police"/>


</LinearLayout>